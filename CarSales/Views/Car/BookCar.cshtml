@model List<CarSales.Models.Items.Car>

@{
    ViewData["Title"] = "Book Car";
}

<h1 style="text-align:center; margin-bottom:5%">Cars for Sale</h1>


<div class="row">
    @foreach (var items in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-4">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @items.CarName
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@items.CarId"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@items.CarModel</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-success text-white
                               asp-controller="BookingController"
                               asp-action="CreateBooking"
                               asp-route-id="@items.CarId">
                                    <i class="bi bi-cart-plus"></i> Book For Test Drive
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>




