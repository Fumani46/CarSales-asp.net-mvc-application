@model Customer

@{
	ViewData["Title"] = "Add a new customer";
}

<div class="row text">
	<div class="col-md-8 offset-2">
		<p1>Welcome To Car Sales</p1>
	</div>
	<div>
		<div class="col-md-8 offset-2">
			<form asp-action="Create">
				<div asp-validation-summary="All" class="text-danger"></div>

				<div class="form-group">
				<label asp-for="FirstName" class="control-label"></label>
				<input asp-for="FirstName" class="control-label" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="LastName" class="control-label"></label>
				<input asp-for="LastName" class="control-label" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Email" class="control-label"></label>
				<input asp-for="Email" class="control-label" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password" class="control-label"></label>
				<input asp-for="Password" class="control-label" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-outline-success float-right" />
				<a class="btn btn-outline-secondary" asp-action="Index">Login</a>
			</div>
			</form>
			
		</div>
	</div>
</div>